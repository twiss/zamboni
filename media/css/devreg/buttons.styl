@import 'lib';

.button, button, input[type=submit], .button-mdn {
    border-radius: 6px;
    box-shadow: 0 1px rgba(0,0,0,.1), 0 -2px rgba(0,0,0,.1) inset;
    gradient-two-color(#3c88cc, #276195);
    border: 0;
    color: #fff;
    cursor: pointer;
    font: bold 13px/1em $open-stack;
    padding: 6px 10px 7px;
    position: relative;
    text-align: center;
    text-decoration: none;
    text-shadow: 0 1px 0 rgba(0,0,0,.5);
}

button, .button {
    &.prominent {
        padding: 8px 16px 12px;
        font-size: 16px;
        box-shadow: 0 3px rgba(0,0,0,.1), 0 -4px rgba(0,0,0,.1) inset;
    }
    &.good {
        gradient-two-color($button-green-light, $button-green-dark);
        &:active {
            gradient-two-color($button-green-light, $button-green-dark);
        }
    }
    &.bad, &.manage {
        gradient-two-color($button-red-light, $button-red-dark);
        border-color: #ad1212;
        text-shadow: 0 -1px #e00;
        &:active {
            gradient-two-color($button-red-dark, $button-red-light);
        }
    }
}

.button, button {
    &.paypal,
    &.bluevia {
        font: bold italic 24px/26px Verdana, $open-stack;
        padding: 22px 40px 21px;
        min-width: 175px;
    }
    &.paypal {
        gradient-two-color(#F8EAC4, #EEC546);
        color: rgb(51, 70, 118);
        text-shadow: 1px 1px #EDE8BF;
        small {
            font-size: .7em;
        }
        em {
            color: rgb(90, 120, 168);
        }
        &.disabled em {
            color: #919497;
        }
    }
    &.bluevia {
        background: #def url(../../img/mkt/bluevia.png) 50% -20% no-repeat;
        text-indent: -9999px;

        &:hover {
            background-color: rgba(#def,0.7);
        }
    }
}

.button {
    display: inline-block;

    &.add { // Green
        span {
            padding-left: 16px;
            background: url(../../img/impala/button-icons.png) no-repeat 0 3px;
        }
        &.prominent {
            span {
                padding-left: 24px;
                sprite-pos(3, 64, 3px);
            }
            &.disabled, &.concealed {
                span {
                    sprite-pos(4, 64, 3px);
                }
            }
            &.warning, &.caution {
                span {
                    sprite-pos(5, 64, 3px);
                }
            }
        }
        &.warning,
        &.caution {
            background: url(../../img/impala/warning-bg.png);
            color: #333;
            text-shadow: 0 -1px 0 rgba(255,255,255,.5);
            top: 0;

            span {
                sprite-pos(2, 64, 3px);
            }
        }
        &.disabled,
        &.concealed {
            top: 0;

            span {
                sprite-pos(1, 64, 3px);
            }
        }
    }
    &.premium {
        gradient-two-color(#E3C17F, #D6913D);
    }
    &.contribute { // Blue
        &.prominent b {
            background: url(../../img/impala/button-icons.png) no-repeat;
            padding-left: 24px;
            margin-left: -4px;
            sprite-pos(7, 64, 4px);
        }
    }
    &.developer, &.scary { // Red
        span {
            margin-left: -4px;
            padding-left: 24px;
            background: url(../../img/impala/button-icons.png) no-repeat;
            sprite-pos(6, 64, 3px);
        }
    }
    &.watch:not(.watching) { // Orange
        background: #ea0;
        gradient-two-color(#ea0, darken(#ea0, 10%));
    }
    &.platform {
        display: none;
    }
}
.html-rtl {
    .button {
        &.add {
            span {
                background-position: 93px 3px;
                padding: 0 16px 0 0;
            }
            &.prominent {
                span {
                    padding: 0 24px 0 0;
                    sprite-pos-right(3, 64, 3px);
                }
                &.disabled, &.concealed {
                    span {
                        sprite-pos-right(4, 64, 3px);
                    }
                }
                &.warning, &.caution {
                    span {
                        sprite-pos-right(5, 64, 3px);
                    }
                }
            }
            &.warning,
            &.caution {
                span {
                    sprite-pos-right(2, 64, 3px);
                }
            }
            &.disabled,
            &.concealed {
                span {
                    sprite-pos-right(1, 64, 3px);
                }
            }
        }
        &.contribute.prominent b {
            margin: 0 -4px 0 0;
            padding: 0 24px 0 4px;
            sprite-pos-right(7, 64, 4px);
        }
        &.developer, &.scary {
            span {
                margin: 0 -4px 0 0;
                padding: 0 24px 0 0;
                sprite-pos-right(6, 64, 3px);
            }
        }
    }
}
button, .button, .button-mdn {
    &:hover,
    &:focus,
    &:active,
    &.selected {
        text-decoration: none;
        box-shadow: 0 1px rgba(0,0,0,0.1), 0 -2px rgba(0,0,0,0.1) inset, 0 0 100px rgba(255,255,255,0.2) inset;
    }
    &:active,
    &.selected {
        box-shadow: 0 0px rgba(0,0,0,0.1), 0 -2px rgba(0,0,0,0.1) inset, 0 0 100px rgba(255,255,255,0.2) inset;
    }
    &.prominent {
        &:hover,
        &:focus,
        &:active,
        &.selected {
            box-shadow: 0 3px rgba(0,0,0,0.1), 0 -4px rgba(0,0,0,0.1) inset, 0 0 100px rgba(255,255,255,0.2) inset;
        }
        &:active,
        &.selected {
            box-shadow: 0 1px rgba(0,0,0,0.1), 0 -4px rgba(0,0,0,0.1) inset, 0 0 100px rgba(255,255,255,0.2) inset;
        }
    }
    &:active,
    &.selected,
    &.prominent:active,
    &.prominent.selected {
        box-shadow: inset 0 2px 0 0 rgba(#000,.2), inset 0 12px 24px 6px rgba(#000,.2), inset 0 0 2px 2px rgba(#000,.2);
    }
}

.install.clickHijack a * {
    pointer-events: none;
}

.install-shell {
    .install {
        display: inline-block;
    }
    .warning {
        font-size: 12px;
    }
    .extra {
        margin-top: 8px;
    }
    .notavail {
        color: $error-red;
        display: block;
        font-size: 11px;
        margin: 0 0 4px;
    }
    .acr-incompat {
        color: $note-gray;
    }
}

#promos {
    .button.disabled,
    .button.concealed {
        display: none !important;
    }
}
.listing-grid {
    .hovercard {
        .install-shell {
            margin-bottom: 12px;
        }
        .install-button {
            margin: 0;
        }
        .button.disabled,
        .button.concealed {
            display: none !important;
        }
    }
}

.mac .button.mac,
.linux .button.linux,
.other .button.bsd,
.other .button.solaris,
.windows .button.windows {
    display: inherit;
}
.thunderbird .listing-grid .install-shell {
    display: none;
}

button[disabled],
.button.disabled,
.button.concealed {
    background: #c1c5ca;
    gradient-two-color(#d1d4d7, #c1c5ca);
    color: #919497;
    box-shadow: 0 3px rgba(0,0,0,0.05), 0 -4px rgba(0,0,0,0.05) inset;
    text-shadow: 0 1px 0 rgba(255,255,255,.5);
}
button[disabled],
.button.disabled {
    pointer-events: none;
}

.consumer-submit{
    background-color: #1793E5;
    background-image: linear-gradient(#4CB1FF, #1793E5);
    background-repeat: repeat-x;
    border: 1px solid #1793E5;
    border-radius: 3px;
    color: #FFF;
    display: inline-block;
    float: right;
    font: 400 14px/48px "Feura Sans",FeuraSansWeb,"Open Sans","Helvetica Neue",Arial,sans-serif;
    height: 48px;
    margin-top: 10px;
    min-width: 100px;
    white-space: nowrap;
    padding: 0px 20px;
    text-align: center;
    text-decoration: none;
}
