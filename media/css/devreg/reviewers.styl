@import 'lib';

body {
    min-width: 0;
}

#breadcrumbs {
    margin-bottom: 15px;
}

h2, h3 {
    margin: 10px 0 0;
}

#page p + h2 {
    margin-top: 10px;
}

th {
    font-weight: bold;
}

dt {
    float: left;
    min-width: 20%;
}

dd {
    margin-bottom: 0;

    &:after {
        content: " ";
        clear: both;
        display: block;
        height: 0;
        visibility: hidden;
    }
    a {
        margin: -5px;
        padding: 5px;
    }
    &.warn {
        color: $red;
        font-weight: bold;
    }
}

/* Review Page */

header {
    .addon {
        min-height: 38px;
        padding-left: 50px;
        position: relative;
    }
    .icon {
        min-height: 32px;
        min-width: 32px;
        padding: 4px;
        position: absolute;
        left: 0;
        background: $white;
        border-radius: 2px;
        box-shadow: 0 1px 2px #000;
    }
    .author {
        margin: 0 0 20px;
    }
    #actions {
        float: right;
        margin-top: 15px;

        li {
            margin-left: 10px;
        }
    }
}


.island ul.statuslist {
    border: 0;
}
.summary {
    line-height: 16px;

    .price {
        font-size: 13px;
    }
    .content-ratings {
        display: inline;
        margin-bottom: 0;
        position: relative;

        .content-rating {
            display: inline-block;
            float: left;
            margin-bottom: 0;
        }
        .icon {
            display: inline-block;
            margin-right: 4px;
            max-width: 32px;
        }
    }
}

.html-rtl header {
    .icon {
        margin-left: 5px;
    }
    h1 {
        float: right;
    }
    #actions {
        float: left;
    }
}

#addon {
    float: left;
    width: 75%;

    #summary p, .userinput {
        color: $medium-gray;
        line-height: 15px;
    }
    em.no-results {
        display: block;
        font-style: italic;
        font-size: 13px;
        font-weight: normal;
        padding: 0;
    }
}

.html-rtl #addon {
    float: right;
}

#scroll_sidebar_parent {
    float: right;
    position: relative;
    width: 16%;

    strong {
        display: block;
        margin-top: 10px;
    }
    li {
        margin-top: 5px;
    }
}

.statuslist {
    margin-bottom: 20px;
}

nav.paginator {
    margin-top: 26px;
    overflow: hidden;

    .rel a {
        overflow: visible;
    }
    .next {
        text-align: center;
    }
}

.more-app-info-show,
.less-app-info-show {
    background-color: $faint-gray;
    padding: 4px;
    text-align: center;

    a {
        display: block;
    }
}


/* sprites for data grid icons */

.sprite-reviewer {
    float: left;
    margin-right: 4px;
    background: url(../../img/mkt/icons/mkt-reviewer-icons.png) no-repeat;
    width: 16px;
    height: 16px;
    position: relative;
    top: 4px;
    text-decoration: none;
}
.sprite-reviewer-editor {
    background-position: 0 0;
}
.sprite-reviewer-notes {
    background-position: -16px 0;
}
.sprite-reviewer-packaged-app {
    background-position: 0 -16px;
}
.sprite-reviewer-locked {
    background-position: -16px -16px;
}
.sprite-reviewer-premium {
    background-position: -32px 0;

    &.inapp:after {
        color: $green;
        content: '\002B';  // Plus sign.
        font-size: 22px;
        left: 10px;
        position: absolute;
        text-shadow: -1px 0 #000;
        top: 1px;
    }
    &.free.inapp:before {
        color: $green;
        content: '\20E0';  // Prohibited sign.
        font-size: 16px;
        position: absolute;
        right: 1px;
        text-shadow: -1px 0 $ligt-gray;
    }
}
.sprite-reviewer-info {
    background-position: -32px -16px;
}
.sprite-reviewer-blocked {
    background-position: 0 -32px;
}
.sprite-reviewer-privileged-app {
    background-position: -32px -32px;
}
.sprite-reviewer-priority {
    background-position: -16px -32px;
}

.sort-icon {
    background: url(../../img/developers/editor-sprite.png) no-repeat top left;
}
.ed-sprite-sort-asc {
    background-position: right -321px;
}
.ed-sprite-sort-both {
    background-position: right -378px;
}
.ed-sprite-sort-desc {
    background-position: right -435px;
}
.queue-outer {
    border-radius: 5px;
    border: 4px solid #E0EFFD;
    margin-bottom: 2em;

    .no-results {
        margin: 0;
        padding: 6em 1em;
        font-size: 1.1em;
    }
}
.queue-inner {
    border-radius: 3px;
    background-color: $white;
    border: 1px solid #2E5186;

    a em {
        font-size: .8em;
        opacity: .6;
    }
}

.device-list {
    width: 121px;
}

/* Version notes */
#popup-notes .version-notes {
    overflow: auto;
    max-height: 200px;
    margin-bottom: 1em;
}
.addon-version-notes {
    position: relative;
}
table.data-grid .addon-version-notes a {
    text-decoration: none;
}
.data-grid .extra-info {
    text-align: center;

    em {
        display: block;
    }
}

.island {
    position: relative;
    z-index: 1;
}

.html-rtl .tabnav {
    text-align: right;
}

#page ul.tabnav {
    padding: 0;

    a {
        border-radius: 5px 5px 0 0;
        background-color: $taupe;
        border: 1px solid transparent;
        border-bottom: 0;
        font-weight: bold;
        color: $medium-gray;
        display: inline-block;
        padding: 10px 10px 20px;
        text-decoration: none;
    }
}

/* Home */
#editors_main .listing {
    .results-inner {
        padding: 0;

        time {
            color: #aaa;
            font-style: italic;
        }
    }
    .row {
        padding: .5em;
        margin: 0 5px;
        border-bottom: 1px dotted #ADD0DC;

        &:last-child {
            border-bottom-width: 0px;
        }
    }
}

.listing .listing-header {
    text-align: center;
    font-weight: bold;
}

#editors-stats-charts .editor-stats-title,
#editors-stats-charts .editor-stats-table {
    width: 33%;
    float: left;
}

.editor-stats {
    clear: both;
}

.editor-stats-title span,
.editor-stats-title a {
    font-weight: bold;
    padding-left: 7px;
}

.editor-stats-table {
    & > div {
        padding: 0 10px 5px;
        margin: 5px 0 0;
        border-left: 1px dotted #ADD0DC;
    }
    &:first-child > div {
        border-left-width: 0px;
    }
    table {
        width: 100%;
        margin: 0;

        tr:first-child td {
            border-top-width: 0px;
        }
    }
    td, th {
        padding: 0;
        border-top: 1px solid #F0F7FE;
    }
    .int {
        text-align: right;
        color: #37A632;
        font-weight: bold;
    }
    .date {
        text-align: right;
        color: #999;
        font-style: italic;
    }
}

.listing-header {
    line-height: 1.8em;
}


table.data-grid tr.comments td {
    border-top: none;
    background: #def;
}
thead th {
    &:first-child {
        width: 0;
    }
}

.waiting_old, .waiting_med, .waiting_new {
    height: 20px;
    box-shadow: 0px 2px rgba(0,0,0,0.1) inset;
    float: left;
    transition(.3s background-color);
}

.waiting_old:hover, .waiting_med:hover, .waiting_new:hover {
    transition(.1s background-color);
}

.waiting_old {
    background-color: #FFD3D3;

    &:hover {
        background-color: #FCBCBC;
    }
}

.waiting_med {
    background-color: #FFFFB4;

    &:hover {
        background-color: #F5F484;
    }
}
.waiting_new {
    background-color: #B8E6B8;

    &:hover {
        background-color: #9DE19C;
    }
}

div.editor-waiting {
    border: 1px solid $note-gray;
    border-radius: 5px;
    overflow: hidden;
}

div.editor-stats-dark {
    background-color: #F3F3F3;
    border-top: 1px dotted $medium-gray;
    display: block;
    padding: 5px 10px 10px;
}

div.editor-stats-table > div.editor-stats-dark {
    border-left: 1px solid #DDDDDD;
}

/* Moderated reviews css */

#reviews-flagged {
    .review-flagged {
        border-top: 1px dotted $medium-gray;
        line-height: 20px;
        margin: 0 0 1em 1em;
        padding: 1em;

        ul {
            margin-bottom: 0;
        }
    }
    &:first-child {
        border-top: 0;
    }
    .reviews-flagged-reasons {
        background-color: lighten($red, 50%);
        border-radius: 10px;
        clear: both;
        margin: 0;
        padding: 0 10px;

        li {
            border-top: 1px dotted $light-gray;
            padding: 10px 0;

            &:first-child {
                border-top: 0;
            }
        }
    }
    h3 {
        margin: 0;
    }
    p {
        margin-bottom: 1.5em;
    }
    .review-flagged-actions {
        border-left: 1px dashed $medium-gray;
        float: right;
        margin-left: 10px;
        padding-left: 10px;
        width: 200px;

        label {
            font-weight: normal;
        }
    }
    form {
        margin: 0;
    }
    div.review-saved {
        margin-bottom: 0;
        padding: 10px;
        text-align: right;
    }
    label[for$=action_0] {
        color: $green;
    }
    label[for$=action_2] {
        color: $maroon;
    }
    .stars {
        float: left;
    }
    span.light {
        color: $note-gray;
    }
}
.html-rtl #reviews-flagged {
    .stars {
        float: right;
    }
}

/* data grid search form */
#log-filter form {
    margin: 0;
}
.log-filter-outside {
    float: none;
    text-align: center;

    label {
        font-weight: normal;
        padding: 0 6px;
    }
    input::-webkit-input-placeholder {
       color: #BBB;
    }
    input:-moz-placeholder {
       color: #BBB;
    }
    div.date_range {
        padding: .5em 0 0;
    }
    form button {
        right: 6px;
    }
}

.queue-search {
    margin-bottom: 1em;
    padding: 1em;
    text-align: center;

    .date_range {
        padding: 1em;
    }
    label[for="id_q"] {
        margin-right: .5em;
    }
    #id_q {
        border-radius: 3px 0 0 3px;
        min-width: 50%;
    }
    .toggle-queue-search {
        position: relative;
        left: 5px;
    }
}
button.search, .log-filter-outside button {
    border-radius: 0 3px 3px 0;
    height: 30px;
    line-height: 14px;
    padding: 0;
    right: 3px;
    top: 1px;
}
.queue-search-desktop button.search {
    line-height: 27px;
    top: 0;
}
.advanced-search {
    margin-top: 26px;
    min-width: 50%;
    text-align: left;
    width: 100%;

    label {
        margin-bottom: .5em;
    }
    ul label {
        font-weight: normal;
    }
    .form-elem, .form-row {
        margin-bottom: 13px;
    }
    .form-elems {
        display: block;
        margin: 0 auto;
        width: 640px;

        label {
            display: block;
            margin: 0 10px 6px 0;
            min-width: 100px;
        }
        .form-row {
            clear: both;
            margin: 0 auto;
            width: 100%;

            > div {
                float: left;
                margin-right: 26px;

                &:last-child {
                    margin-right: 0px;
                }
            }
        }
    }
    &.desktop > div {
        display: block;
        margin: 0 auto;
    }
}
.queue-search-desktop .clear-queue-search {
    margin-left: 5px;
}

/* Add-on Review Log */
#log-listing tr th:nth-child(1) {
    width: 20%;
}
#log-listing tr th:nth-child(2) {
    width: 40%;
}
#log-listing tr th:nth-child(3) {
    width: 25%;
}
#log-listing tr th:nth-child(4) {
    width: 15%;
}
#log-listing .hide {
    display: none;
}

#scroll_sidebar {
    position: absolute;
    top: 0;

    .sticky {
        position: fixed;
        top: 10px;
    }
}

#history {
    border-radius: 5px;
    padding: 0;
    width: 100%;

    #review-files-header {
        padding: 0 15px;
    }
    h3 span {
        color: $medium-gray;
        padding: 0 5px;
    }
    table {
        line-height: 1.3;
        width: 100%;
    }
    .log-group {
        color: $medium-gray;
        margin: 10px 0 0;
    }
    .log-comments {
        ul {
            list-style: disc inside;
            margin: 5px 0;
        }
    }
    .log-attachments {
        li{
            margin: 4px 0 0 1px;

            &:first-child {
                margin-top: 6px;
            }
            &.image a {
                background-position: 0 -1369px;
            }
        }
        a {
            background: url("../../img/icons/news-feed-sprite.png") 0 -1407px no-repeat;
            display: inline-block;
            min-height: 16px;
            padding-left: 22px;
        }
    }
}

#review-files {
    width: 100%;

    .listing-header > th {
        background: $faded-blue;
        padding: 5px 15px;
    }
    .listing-header,
    .listing-body {
         border-top: 1px solid #A5BFCE;
    }
    td {
        border-radius: 0 0 5px 5px;
        background-color: #FAFAFA;
        padding: 15px;
    }
}
#review-files-header h3 {
    span {
        font-size: .7em;
    }
    h3 a.on {
        color: #333;
        font-weight: bold;
    }
    #review-files-paginate {
        float: right;
        margin-top: 2em;
    }
}
#review-files-paginate ol {
    float: right;
    margin: 0;
    padding-left: 10px;
    text-align: right;
    top: -20px;
    width: auto;
}
#review-files .activity .comm-notes-paginator {
    border-bottom: none;
    display: none;

    a {
        display: none;
        float: right;
        margin-right: 5px;

    }
    .next.active + .prev:after {
        background-color: $medium-gray;
        border-radius: 3px;
        bottom: 2px;
        content: "";
        display: inline-block;
        height: 3px;
        left: 2px;
        margin: 0 2px;
        position: relative;
        width: 3px;
    }
}

.comm-note {

    pre {
        padding-left: 0;
    }
    strong {
        color: lighten($medium-gray, 15%);
    }
}

#review-files table.activity {
    th {
      width: 25%;
      padding-right: 1em;
    }
    tr {
        border-bottom: 1px dotted #ccc;
        border-top: none;

        td {
            padding: 15px 0;
        }
        &:first-child td {
            padding-top: 0;
        }
        &:last-child td {
            padding-bottom: 0;
        }
    }
    tr:last-child {
        border-bottom: 0;
    }
}
#review-files .listing-header span.light {
    font-weight: normal;
    color: #999;
}
#review-files tr.listing-header {
    &:hover {
        cursor: pointer;
        gradient-two-color($white, #CCE6FF);
    }
    &:active {
        cursor: pointer;
        gradient-two-color(#e0effd, $white);
    }
}
#review-files .files {
    div:first-child {
        padding-top: 0;
    }
    li, & > div {
        padding-top: 5px;
        line-height: 1.3em;
    }
    ul {
        margin: 0 0 5px 15px;
    }
}
#review-files .no-activity {
    color: #777;
    font-style: italic;
    text-align: center;
}
#review-files .install {
    padding: 0;
}

#review-actions-form {
    background: $white;
    display: none;
    padding: 10px;

    textarea, input[type=text], select {
        border: 1px solid #AFBDD3;
    }
    textarea {
        height: 200px;
    }
    .review-actions-desc {
        text-align: center;
    }
    label {
        display: inline-block;
        margin: 5px 0;
    }
    .review-actions-tested label {
        margin: 5px 10px 5px 25px;
    }
    .review-actions-device-override {
        ul {
            margin-top: 5px;

            li {
                display: inline-block;
                margin-right: 15px;
            }
        }
    }
    .review-actions-options ul {
        columns(2, 1em);
    }
}

table.activity .error {
    font-style: italic;
    line-height: 18px;
    max-width: 98%;
}

.review-actions {
    border-radius: 5px;
    box-shadow: 0 -2px 0 rgba($taupe, .2) inset, 0 0 1px rgba(0, 0, 0, .1);
    border: 1px solid $border-blue;
    margin: 15px 0 30px;

    #review-actions-form {
        display: none;
    }
    .action_nav {
        background: #fff;
        border-radius: 2px;

        ul {
            margin: 0;
            display: table;
            width: 100%;
        }
        li {
            background: $faded-blue;
            border-top: 0;
            border-bottom: 0;
            border-right: 1px solid $border-blue;
            display: table-cell;
            text-align: center;
            text-shadow: 1px 1px 0 #fff;

            &:active {
                background: $white;
            }
            input {
                display: none;
            }
            label {
                display: block;
                padding: 10px 5px;
            }
            &:first-child {
                border-left: 0;
                border-radius: 2px 0 0 2px;
            }
            &:last-child {
                border-right: 0;
                border-radius: 0 2px 2px 0;
            }
            &.disabled {
                background: $faint-gray;
                color: $note-gray;

                label:hover {
                    cursor: default;
                }
            }
        }
    }
}

.review-actions.on {
    #review-actions-form {
        border: 0;
        border-radius: 0 0 2px 2px;
    }
    .action_nav {
        ul li.on-tab {
            background: #fff;
            border-bottom: none;
        }
        li {
            border-bottom: 1px solid #A5BFCE;

            &:first-child {
                border-radius: 2px 0 0;
            }
            &:last-child {
                border-radius: 0 2px 0 0;
            }
        }
    }
}

/* Hide "files" for now. */
.review-actions-files {
    display: none !important;
}

#review-actions-files-warning {
    color: #B47100;
}

.review-actions-canned {
    margin-top: 10px;
    text-align: right;

    #id_canned_response optgroup[label=""] {
        display: none;
    }
    select {
        padding: 0;
    }
}

.review-actions-attachments {
    .formset {
        margin-top: 1.5em;
    }
    .fileinput {
        margin-bottom: .3em;
    }
    a.add-row {
        background: url("../../img/icons/news-feed-sprite.png") no-repeat 0 -1444px;
        display: inline-block;
        margin-top: 6px;
        min-height: 15px;
        padding: 1px 0 0 22px;
    }
}

.review-actions-section {
    border-top: 1px dotted #ccc;
    margin-top: 1em;
    padding-top: 1em;

    label {
        font-weight: normal;
    }
}

.review-actions-save {
    text-align: right;
}

.history-comment {
    white-space: pre-wrap;

    .history-comment-version {
        padding: 10px;
        overflow: auto;
    }
}

.history-comment-byline {
    padding: 0 10px;
    font-style: italic;
}

.review-paging {
    border-bottom: 1px dotted #ccc;
    margin-bottom: 2em;
    padding-bottom: 1em;
    text-align: center;
}

#editor-motd {
    textarea {
        height: 5em;
        margin-bottom: .5em;
    }

    .buttons {
        text-align: right;
    }
}

.currently_viewing_warning {
    display: none;
}

.scroll_sidebar_parent .currently_viewing_warning {
    margin-top: 0;
    border: medium none;
    border-radius: 8px;
}

div.currently_viewing_warning {
    background-color: #FFE4E4;
    margin: 1em 0;
    border: 1px dashed #FE7272;
    padding: 10px;
}

div.currently_viewing_warning strong {
    display: block;
}

span.currently_viewing_warning {
    color: red;
    padding-right: 15px;
}

.concealed {
    font-size: 15px;
    font-weight: bold;
    padding: 4px 10px 7px;

    &:hover {
        gradient-two-color(#ccc, #bbb);
        color: $dark-gray;
    }
}

#actions {
    .button.product {
        position: relative;
        width: 100%;
        z-index: 1;
    }
    .button {
        display: block;
    }
    .faked-purchase, .approval {
        border-radius: 0 0 5px 5px;
        display: block;
        margin-top: -5px;
        padding: 15px 15px 10px;
        position: relative;
        z-index: 0;
    }
    .no-apps {
        text-align: center;
        margin-top: 10px;
        line-height: 20px;
        display: none;

        a {
            background: url(../../img/mkt/icons/nightly.png) 5px 0 no-repeat;
            padding: 0 5px 0 30px;
            display: inline-block;
        }
    }
    .faked-purchase {
        border-radius: 0 0 5px 5px;
        background: rgba($red,.1);
        font-size: 12px;
        text-align: center;

        b {
            color: $maroon;
            display: block;
            text-transform: uppercase;
        }
    }
}

#reviewers-score-bar {
    ul li {
        float: left;
        width: 32%;
        margin: 0 0.5%;
    }
    h3 {
        margin-top: 0;
    }
    tr.you-are-here {
        font-weight: bold;
    }
    td.number {
        text-align: right;
    }
    p.total {
        margin-bottom: 10px;
    }
}

.html-rtl #reviewers-score-bar {
    ul li {
        float: right;
    }
    td.number {
        text-align: left;
    }
}

#leaderboard {
    td.name {
        width: 70%;
    }
    th.rank {
        color: $orange;
    }

    .level {
        padding: 0.2em;
        text-align: center;
    }
    .level::before, .level::after, .level:before, .level:after {
        content: "▴";
        padding: 0 0.6em;
    }
}

#search-queue {
    .app-name {
        width: 33%;

        a {
            display: inline-block;
        }
        span {
            border: 1px solid $light-gray;
            border-radius: 5px;
            display: inline-block;
            font-size: 11px;
            margin: 0 5px 0 0;
            padding: 0 5px;
        }
    }
    .status {
        text-transform: capitalize;
    }
}

@media $landscape-min {
    #scroll_sidebar_parent {
        right: 70px;
    }
    .data-grid {
        margin-top: 13px;

        .addon-row a {
            max-width: 600px;
        }
        .number {
            text-align: right;
        }
    }
    /* editors/queue tabs */
    .tabnav {
        margin: 0 10px;
        position: relative;
        top: 13px;

        &.themes {
            display: inline-block;
        }
    }
    #page .tabnav li {
        display: inline;
        position: relative;
        margin: 0 5px;
        top: 0;
        z-index: 0;

        &:after {
            /* Cover the bottom part of the box-shadow. */
            background: $white;
            bottom: 12px;
            content: "";
            display: block;
            float: left;
            height: 15px;
            margin-bottom: -15px;
            position: relative;
            width: 100%;
        }
        &.selected {
            z-index: 2;

            a {
                background-color: $white;
                border-color: $taupe;
                box-shadow: 0 -2px 0 rgba($taupe,.2) inset, 0 0 1px rgba(0,0,0,0.1);
            }
            a, a:hover {
                color: $dark-gray;
            }
        }
    }
    #actions li {
        margin-bottom: 20px;
        max-width: 264px;
        min-width: 192px;
    }
    .review-actions-attachments {
        .formset {
            margin-top: 1em;
        }
        .fileinput {
            display: inline-block;
            margin-right: 25px;
        }
    }
}

@media $landscape-max {
    #id_q {
        font-size: 18px;
    }
    html, body {
        background: $bg-gray $grain-src;
    }
    #page ul.tabnav li {
        margin: 0;
    }
    #breadcrumbs,
    #actions + strong,
    #actions + strong + ul,
    #helpfulLinks,
    #footer {
        display: none;
    }
    #reviewers-score-bar {
        margin-bottom: 15px;
    }
    #wrap {
        padding: 10px 0 0;
    }
    ul.tabnav {
        li {
            display: none;

            &.selected {
                display: block;
            }
        }
        a {
            border-box();
            font-size: 12px;
            padding: 10px;
            pointer-events: none;
            width: 100%;
            &:active {
                background-color: lighten($taupe, 5%);
                color: $note-gray;
            }
        }
        + .island {
            border-radius: 0;
            padding: 0;
        }
    }
    .data-grid {
        .addon-row a {
            display: block;
            font-size: 12px;
            line-height: 14px;
            margin: -15px -30px;
            padding: 15px 30px;
            text-align: left;
        }
        .desktop-only, .unsupported, .abuse-reports, .waiting-time {
            display: none;
        }
        .number {
            text-align: right;
        }
    }
    .device-list {
        margin: 0 auto;

        .firefoxos {
            width: 20px;
        }
    }
    #page h1 {
        font-size: 18px;
        line-height: 20px;
        margin: 10px 0 15px;
    }
    #scroll_sidebar_parent, #addon {
        float: none;
        width: 100%;
    }
    #scroll_sidebar_parent, #scroll_sidebar {
        position: inherit;
    }
    #scroll_sidebar {
        margin-bottom: 15px;
    }
    #actions {
        li {
            border-box();
            float: left;
            margin: 0;
            width: 33.33%;
            + li {
                padding-left: 5px;
            }
        }
        .app-install .button {
            font-weight: 600;
        }
        .button {
            height: inherit;
            font-weight: 100;
            padding: 8px;

            &.product {
                top: -2px;
            }
        }
    }
    dt {
        min-width: 30%;
    }
    .app-name a {
        font-weight: 600;
    }
    button.button.search {
        height: 38px;
        line-height: 48px;
        margin-right: 0;
        margin-top: 0;
        min-width: 0%;
        padding: 0 2px;
        top: 5px;

        span {
            bottom: 7px;
            position: relative;
        }
    }
}

@media $mobile-landscape {
    .advanced-search .form-row {
        left: 15%;
        position: relative;
    }
}

.regional-queue {
    min-width: 860px;
    .action {
        text-align: right;
    }
    .addon-row a.button {
        border: 0;
        display: inline-block;
        font-size: inherit;
        height: 35px;
        line-height: 35px;
        min-width: 80px;
        padding: 0 10px;

        &.approve {
            background: $button-green-dark;

            &:hover {
                background: $button-green-light;
            }
        }
        &.reject, &.duplicate, &.flag {
            background: $button-red-dark;

            &:hover {
                background: $button-red-light;
            }
        }
        &:hover {
            color: $white;
        }
        &.disabled, &.disabled:hover {
            background: #c1c5ca;
            color: #919497;
        }
        + a.button {
            margin-left: 10px;
        }
    }
}
