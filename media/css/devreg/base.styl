@import 'lib';

* {
    text-rendering: optimizeLegibility;
    word-wrap: break-word;
}

body, html {
    background: #fff;
}

body {
    min-width: 1024px;
}

body.overlayed {
    overflow: hidden;
}

.pad {
    height: auto;
    margin: 0 auto;
    max-width: 960px;
    padding: 0 2%;
    position: relative;
}

#wrap {
    background: $bg-gray $grain-src;
    padding: 2em 0;
    position: relative;
}

header {
    h2, h3 {
        margin-bottom: 16px;
    }
}

a {
    text-decoration: none;
    color: $link;

    &:hover {
        text-decoration: underline;
    }
}

#page section {
    margin-bottom: 39px;
}

.island {
    background: #fff;
    border: 1px solid $taupe;
    border-radius: 5px;
    box-shadow: 0 -2px 0 rgba($taupe,.2) inset, 0 0 1px rgba(0,0,0,.1);
    display: block;
    margin-bottom: 15px;
    padding: 15px;

    &.swagger {
        gradient-two-color(#fff, #f3f3f3);
    }
    > section {
        border-bottom: 1px solid #C9DDF2;
        border-top: 1px solid transparent;
        margin: 0 -14px;
        padding: 14px;
        float: left;
        width: 100%;

        &:first-child {
            border-top: 0;
            padding-top: 0;
        }
        &:last-child {
            border-bottom: 0;
        }
    }
}

.daily-message {
    background: lightgoldenrodyellow;
    display: none;
    position: relative;
    margin-bottom: 30px;
    overflow: auto;

    .close {
        background-color: $border-gray;
        border-radius: 20px;
        color: $white;
        font-size: 16px;
        font-weight: bold;
        height: 20px;
        line-height: 20px;
        position: absolute;
        right: 20px;
        text-align: center;
        text-decoration: none;
        top: 20px;
        width: 20px;

        &:hover {
            background-color: $light-gray;
            text-decoration: none;
        }
    }
    h2 {
        color: darkgoldenrod;
    }
    p {
        line-height: 1.3;
        margin: 0 0 5px;
    }
    .subtle{
        text-align: right;
        width: 50px;
        float: right;
        clear: both;
    }
}


.full {
    border-box();
    margin: 0;
    width: 100%;
}

#breadcrumbs,
#breadcrumbs + h1 {
    margin-bottom: 5px;
}

.island #breadcrumbs,
.island #breadcrumbs + h1 {
    margin-bottom: 5px;
}

#site-notice {
    background: $notice-yellow;
    border-bottom: 1px solid #ddd;

    p {
        text-align: center;
        margin: 0;
        padding: 1em;
        font-size: 14px;
        font-weight: bold;
        line-height: 18px;
    }
}

.alert-notice:before {
    background: url('../../img/zamboni/icons/alert-32x32.png');
    background-size: 16px 16px;
    content: '';
    display: inline-block;
    height: 16px;
    margin-right: 3px;
    position: relative;
    top: 2px;
    width: 16px;
}

.js-hidden, #popup-staging, .hidden {
    display: none;
}

span.emaillink {
    direction: rtl;
    unicode-bidi: bidi-override;

    .i {
        display: none;
    }
}
